<script>

    function createTableCellWithTooltip(text, maxLength) {
        var cell = $("<td>").attr("data-toggle", "tooltip").attr("data-placement", "bottom").text(abbreviateText(text, maxLength));
        if (text.length > maxLength) {
            cell.attr("title", text);
        }
        return cell;
    }

    function abbreviateText(text, maxLength) {
        if (text.length > maxLength) {
            return text.substr(0, maxLength) + '...';
        }
        return text;
    }
    $(document).ready(function () {
        $('#examps').on('click', '.link-item', function (event) {
            event.preventDefault();

            var id = $(this).data('id');
            
            var url = '/purchasesitems/Details/' + id; // replace with your detail page URL
            $.ajax({
                url: url,
                type: 'GET',
                success: function (data) {
                    var POID = data[0].POID;
                    var Daate = data[0].Date;
                    var UserID = data[0].UserID;
                    var CompanyName = data[0].CompanyName;
                    var BillNo = data[0].BillNo;
                    var date = new Date(parseInt(Daate.substr(6)));
                    var formattedDate = ('0' + date.getDate()).slice(-2) + '/' + ('0' + (date.getMonth() + 1)).slice(-2) + '/' + date.getFullYear();

                    $("#Date").text(formattedDate);
                    $("#UserName").text(UserID);
                    $("#CompanyName").text(CompanyName);

                    var tableBody = $("#purchases-list tbody");
                    tableBody.empty();

                    $.each(data, function (index, item) {
                        var row = $("<tr>");
                        row.append(createTableCellWithTooltip(item.Podetail.ProName, 6));
                        row.append(createTableCellWithTooltip(item.Podetail.Quantity, 6));
                        row.append(createTableCellWithTooltip(item.Podetail.BatchNo, 6));
                        row.append(createTableCellWithTooltip(item.Podetail.ProductUnit, 6));
                        row.append(createTableCellWithTooltip(item.Podetail.ProductType, 6));
                        row.append(createTableCellWithTooltip(item.Podetail.Packing, 6));
                        row.append(createTableCellWithTooltip(item.Podetail.CostPrice, 6));
                        row.append(createTableCellWithTooltip(item.Podetail.UnitPrice, 6));
                        tableBody.append(row);
                    });

                    $('[data-toggle="tooltip"]').tooltip();
                },


                error: function (xhr, status, error) {
                    debugger
                    console.log(error);
                }
            });
        });
    });
</script>
