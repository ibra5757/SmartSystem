
@{

    if (Session["UserID"] == null)
    {
        <script>window.location.href = "/Account/Login";</script>
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Css/style.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <script src="https://kit.fontawesome.com/ef9da11eab.js" crossorigin="anonymous"></script>
</head>
<body>

    <!-- Navbar-->
    <div class="sidebar"  style="z-index:10001 !important">
        <div class="logo-details">
            <i class='bx bxl-c-plus-plus icon'></i>
            <div class="logo_name">Flint_INC.</div>
            <i class='bx bx-menu' id="btn"></i>
        </div>
        <ul class="nav-list">

            <li>
                <a href="@Url.Action("Dashboard","Account")">
                    <i class='bx bx-grid-alt'></i>
                    <span class="links_name">Dashboard</span>
                </a>
                <span class="tooltip">Dashboard</span>
            </li>
            <li>
                <a href="@Url.Action("Index","ManageStock")">
                    <i class='bx bx-user'></i>
                    <span class="links_name">StockManage</span>
                </a>
                <span class="tooltip">Manage stock</span>
            </li>
            <li>
                <a href="@Url.Action("Index","purchases")">
                    <i class='bx bx-chat'></i>
                    <span class="links_name">Purchases</span>
                </a>
                <span class="tooltip">Purchases</span>
            </li>

            <li>
                <a href="@Url.Action("Index","userlogs")">
                    <i class='bx bx-file'></i>
                    <span class="links_name">User Log</span>
                </a>
                <span class="tooltip">User Log</span>
            </li>

            <li>
                <a href="@Url.Action("Index", "Supplier")">
                    <i class='bx bxs-user'></i>
                    <span class="links_name">Supplier</span>
                </a>
                <span class="tooltip">Supplier</span>
            </li>
            <li>
                <a href="@Url.Action("Indexuser","users")">
                    <i class='bx bx-cog'></i>
                    <span class="links_name">Setting</span>
                </a>
                <span class="tooltip">Setting</span>
            </li>
            <li>
                <a href="@Url.Action("Index","Analysis")">
                    <i class='bx bx-line-chart'></i>
                    <span class="links_name">Analysis</span>
                </a>
                <span class="tooltip">Analysis</span>
            </li>
            <li>
                <a href="@Url.Action("Index","SalesOrderMasters")">
                    <i class='bx bx-log-out'></i>
                    <span class="links_name">Sales</span>
                </a>
                <span class="tooltip">Sales</span>
            </li>
            <li>
                <a href="@Url.Action("Index","Ledgers")">
                    <i class='bx bx-log-out'></i>
                    <span class="links_name">LedgerBook</span>
                </a>
                <span class="tooltip">LedgerBook</span>
            </li>
            <li>
                <a href="@Url.Action("Logout","Account")">
                    <i class='bx bx-log-out'></i>
                    <span class="links_name">LogOut</span>
                </a>
                <span class="tooltip">LogOut</span>
            </li>

        </ul>
    </div>
    <section class="home-section col d-flex justify-content-center background-radial-gradient">
        <link href="~/Content/Css/blocks.css" rel="stylesheet" />
        <div class="container px-1 py-2 px-md-1 text-lg-start my-5">
            <div class="row gx-lg-5 align-items-center mb-5">

                <div class="col-lg mb-5 mb-lg position-relative">
                    <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                    <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>



                    <div class="card bg-glass " style="width: 60rem;">
                        <div class="card-body bg-glass" style="background-color:#ffffff;">
                            @RenderBody()

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="modal fade" id="myModal" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" id="closbtn" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
                </div>

                <div class="modal-body" id='myModalContent'>

                </div>


            </div>
        </div>
    </div>
    <script>
        $(function () {
            $("#closbtn").click(function () {
                $('#myModal').modal('hide');
            });
        });

    </script>

    <script src="~/Scripts/_CreateScript.js"></script>
    <script src="~/Scripts/_delete.js"></script>
    <script src="~/Scripts/_Detail.js"></script>
    <script>
        let sidebar = document.querySelector(".sidebar");
        let closeBtn = document.querySelector("#btn");
        let searchBtn = document.querySelector(".bx-search");

        closeBtn.addEventListener("click", () => {
            sidebar.classList.toggle("open");
            menuBtnChange();//calling the function(optional)
        });



        // following are the code to change sidebar button(optional)
        function menuBtnChange() {
            if (sidebar.classList.contains("open")) {
                closeBtn.classList.replace("bx-menu", "bx-menu-alt-right");//replacing the iocns class
            } else {
                closeBtn.classList.replace("bx-menu-alt-right", "bx-menu");//replacing the iocns class
            }
        }
    </script>
</body>

</html>
