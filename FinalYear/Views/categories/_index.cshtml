<p>
    <button class="anchorDetail btn btn-info btn-sm" data-url="/categories/_Create" data-bs-toggle="model" data-target="#myModal">Create</button>
</p>
<table class="table" id="example1">
    <thead>
        <tr>
            <th>CatagoryName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.list)
        {
            <tr>
                <td>
                    @item.Catname
                </td>
                <td>
                    <button href="#" class="anchorDetail btn btn-success btn-sm" data-url="/categories/Edit" data-id="@item.CatID" data-bs-toggle="model" data-target="#myModal">Edit</button>

                    <button class="anchorDetail btn btn-info btn-sm" data-url="/categories/Details" data-id="@item.CatID" data-bs-toggle="model" data-target="#myModal">Details</button>
                    <button id="Delete" data-url="/categories/DeleteConfirmed/" data-id="@item.CatID" class="btn btn-danger btn-sm">Delete</button>

                </td>
            </tr>
        }
    </tbody>
</table>
